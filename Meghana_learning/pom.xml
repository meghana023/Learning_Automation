	<build>
		<plugins>
			<plugin>
				<!-- mvn exec:java -Dexec.mainClass="com.example.runner.RunnerTestNG" -Dbrowser="chrome" -Ddeploy="LOCAL" -Dorg="My OrG" -Dlogin="My LOGIN" "-D cucumber.filter.tags=@tag1" -->

				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.5.0</version>
				<configuration>
					<executable>java</executable>
					<classpathScope>test</classpathScope>
					<!-- mvn clean test-compile exec:exec -DQA_browser="chrome" -DQA_environment="SPRINT" -DQA_scriptExecutionLocation="LOCAL" -DQA_threadCount="2" -DQA_tags="@CompileTest" -->
					<arguments>
						<argument>-classpath</argument>
						<classpath />
						<argument>com.upm.runner.RunnerTestNG</argument>
						<argument>${QA_browser}</argument>
						<argument>${QA_environment}</argument>
						<!-- <argument>${org}</argument>
						<argument>${login}</argument> -->
						<argument>${QA_scriptExecutionLocation}</argument>
						<argument>${QA_threadCount}</argument>
						<argument>${QA_tags}</argument>
						<argument>${QA_successThreshold}</argument>

					</arguments>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
